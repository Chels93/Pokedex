let pokemonRepository=function(){let e=[];function t(t){e.push(t)}function i(){return e}async function a(){try{let e=await fetch("https://pokeapi.co/api/v2/pokemon/?limit=150"),i=await e.json();i.results.forEach(function(e,i){let a={name:e.name,detailsUrl:e.url,id:i+1};t(a)})}catch(a){console.error(a)}}async function n(e){let t=e.detailsUrl;try{let i=await fetch(t),a=await i.json();e.imageUrlFront=a.sprites.front_default,e.imageUrlBack=a.sprites.back_default,e.height=a.height,e.weight=a.weight,e.types=a.types}catch(n){console.error(n)}}function l(e){n(e).then(function(){let t=document.querySelector(".modal-body"),i=document.querySelector(".modal-title");t.innerHTML="<div/>",i.innerHTML="<div/>";let a=document.createElement("h1");a.innerText=e.name;let n=document.createElement("img");n.classList.add("modal-img"),n.style.width="50%",n.src=e.imageUrlFront;let l=document.createElement("img");l.classList.add("modal-img"),l.style.width="50%",l.src=e.imageUrlBack;let o=document.createElement("p");o.innerText="Height: "+e.height+" meters";let r=document.createElement("p");r.innerText="Weight: "+e.weight+" kg";let d=document.createElement("p");d.innerText="Types: "+e.types.map(e=>e.type.name).join(", "),i.appendChild(a),t.appendChild(n),t.appendChild(l),t.appendChild(o),t.appendChild(r),t.appendChild(d)})}return{add:t,getAll:i,addListItem:function e(t){let i=document.querySelector(".pokemon-list"),a=document.createElement("li"),n=document.createElement("button");n.innerText=t.name,n.setAttribute("data-id",t.id),n.setAttribute("data-toggle","modal"),n.setAttribute("data-target","#exampleModal"),n.classList.add("button-class"),n.onclick=()=>l(t),a.appendChild(n),i.appendChild(a)},loadList:a,loadDetails:n,showDetails:l}}();pokemonRepository.loadList().then(function(){pokemonRepository.getAll().forEach(function(e){pokemonRepository.addListItem(e)})});
